{
  "name": "aer-capture-desktop",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/main/index.js",
  "description": "Linux-native desktop app to capture screenshots, OCR, and send to Aer",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "dist": "electron-vite build && electron-builder",
    "start": "electron ."
  },
  "build": {
    "appId": "com.aer.desktop.capture",
    "productName": "Aer Capture",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**",
      "package.json"
    ],
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Utility"
    }
  },
  "dependencies": {
    "active-win": "^9.0.0",
    "axios": "^1.9.0",
    "electron-log": "^5.2.3",
    "keytar": "^7.10.0",
    "lucide-react": "^0.511.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "screenshot-desktop": "^1.15.0",
    "tesseract.js": "^5.1.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.8",
    "@types/node": "^22.15.29",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "electron": "^31.3.0",
    "electron-builder": "^24.13.3",
    "electron-vite": "^2.3.0",
    "typescript": "~5.8.3"
  }
}
